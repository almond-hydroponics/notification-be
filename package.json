{
  "name": "notification-be",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf ./build",
    "build": "tsc",
    "postbuild": "cp -R ./src/assets ./build",
    "serve": "node /src/app/index.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start": "NODE_ENV=production yarn run serve",
    "kill": "kill-port",
    "inspect": "nodemon --inspect src/app/index.ts",
    "test:unit": "cross-env NODE_ENV=testing jest --no-cache  --detectOpenHandles --runInBand --forceExit",
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "eslint \"*/**/*.{js,ts}\" --fix",
    "format-staged": "pretty-quick --staged",
    "tslint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet",
    "seed:data": "chmod u+x ./release.sh && ./release.sh",
    "prettier": "prettier --write src/app/**/*",
    "pret": "npm run prettier-format",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "husky": "pretty-quick --staged && yarn prettier && yarn tslint"
  },
  "dependencies": {
    "@sentry/node": "^6.5.1",
    "@types/morgan": "^1.9.2",
    "agenda": "^4.1.3",
    "agendash": "^2.1.1",
    "app-root-path": "^3.0.0",
    "async-exit-hook": "^2.0.1",
    "bluebird": "^3.7.2",
    "celebrate": "^14.0.0",
    "clf-date": "^0.2.0",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "express-session": "^1.17.2",
    "express-status-monitor": "^1.3.3",
    "helmet": "^4.6.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0",
    "newrelic": "^7.5.0",
    "passport": "^0.6.0",
    "pino": "^6.11.3",
    "prettier": "^2.3.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "swagger-ui-express": "^4.1.6",
    "typedi": "^0.10.0",
    "validator": "^13.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run prettier-format && yarn run lint",
      "pre-push": ""
    }
  }
}
